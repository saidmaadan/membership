
<% @users.each do |user| %>
	<% if user.profile %>
		<div class='row'>
			<div class='col-sm-3'>
				<% if user.profile.avatar %>
					<%= link_to user do %>
						<%= image_tag user.profile.avatar.url(:medium), class: 'img-responsive', style: "width:100%;height:200px;" %>
					<% end %>
				<% end %>
			</div>
			<div class='col-sm-7 well'>
				<div class='user-info'>
					<%= link_to user do %>
						<h1><%= user.profile.first_name %> <%= user.profile.last_name %></h1>
						<h3><%= user.profile.job_title %></h3>
					<% end %>
				</div>
				<div class='wel user-info'>
					<h2>About Me</h2>
					<%= user.profile.description %>
				</div>
				<% if current_user.plan_id == 2 %>
					<div class='wel user-contact'>
						<h2>Contact Info</h2>
						<h4><%= user.profile.contact_email %></h4>
						<h4><%= user.profile.phone_number %></h4>
					</div>
				<% end %>
			</div>
		</div>
	<% end %>
<% end %>
