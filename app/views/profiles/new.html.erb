<div class='row'>
	<div class='col-sm-6 col-sm-offset-3'>
		<h1 class='text-center'>Create Your profile</h1>
		<p class='text-center'>Be a part of the Jobba Community of search list jobs</p>
		<%= form_for @profile, url: user_profile_path do |f| %>
			<div class='form-group'>
				<%= f.label :first_name %>
				<%= f.text_field :first_name, class: 'form-control' %>
			</div>
			<div class='form-group'>
				<%= f.label :last_name %>
				<%= f.text_field :last_name, class: 'form-control' %>
			</div>
			<div class='form-group'>
				<%= f.label :contact_email %>
				<%= f.text_field :contact_email, class: 'form-control' %>
			</div>
			<div class='form-group'>
				<%= f.label :phone_number %>
				<%= f.text_field :phone_number, class: 'form-control' %>
			</div>
			<div class='form-group'>
				<%= f.label :job_title %>
				<%= f.select :job_title, ['Developer', 'Entrepreneur', 'Investor'], {}, class: 'form-control' %>
			</div>
			<div class='form-group'>
				<%= f.label :description %>
				<%= f.text_area :description, class: 'form-control' %>
			</div>
			<div class='form-group'>
				<%= f.submit "Update profile", class: 'btn btn-info' %>
			</div>
		<% end %>
	</div>
</div>
