<div class='row'>
  <div class='text-center'>
    <% if params[:plan] == '2' %>
      <h2>Pro Account</h2>
      <p>Sign up for the pro account @ $15/month and get access to advance features and contact information</p>
    <% else %>
      <h2>Standard Account</h2>
      <p>Sign up for free and get basic and standard access to the community</p>
    <% end %>
  </div>
  <div class='col-sm-6 col-sm-offset-3'>
    <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
        <%= render 'pro_form' %>
      <% else %>
        <%= render 'standard_form' %>
      <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
